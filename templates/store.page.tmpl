{{ template "base" .}}

{{ define "content" }}
  <!-- Main Store Layout -->
    <div class="container my-5">
      <div class="row">
        <!-- Sidebar -->
        <aside class="col-md-3 mb-4">
          <div class="card p-3 shadow-sm">
            <h5 class="mb-3">Filters</h5>
            <input
              type="text"
              id="search-input"
              class="form-control mb-3"
              placeholder="Search wheels..."
            />

            <label class="form-label">Type</label>
            <select id="filter-select" class="form-select mb-3">
              <option value="all">All Types</option>
              <option value="polyurethane">Polyurethane</option>
              <option value="nylon">Nylon</option>
              <option value="rubber">Rubber</option>
            </select>

            <label class="form-label">Price Range (€)</label>
            <div class="range-slider px-1">
              <input
                type="range"
                id="price-min"
                class="form-range"
                min="10"
                max="30"
                value="10"
                step="0.5"
              />
              <input
                type="range"
                id="price-max"
                class="form-range"
                min="10"
                max="30"
                value="30"
                step="0.5"
              />
            </div>
            <div class="d-flex justify-content-between">
              <small id="price-min-label">€10</small>
              <small id="price-max-label">€30</small>
            </div>
          </div>
        </aside>

        <!-- Product Grid -->
        <main class="col-md-9">
          <h2 class="mb-4">Our Wheels</h2>
          <div class="row" id="product-list"></div>

          <!-- Pagination -->
          <nav>
            <ul
              class="pagination justify-content-center mt-4"
              id="pagination"
            ></ul>
          </nav>
        </main>
      </div>
    </div>
{{ end }}
